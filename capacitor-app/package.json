{
  "name": "nearby-traveler-ios",
  "version": "1.0.0",
  "description": "Native iOS wrapper for Nearby Traveler using Capacitor",
  "main": "index.js",
  "scripts": {
    "build": "echo 'No build needed - loads live website'",
    "cap:init": "npx cap init 'Nearby Traveler' com.nearbytraveler.app --web-dir=www",
    "cap:add:ios": "npx cap add ios",
    "cap:sync": "npx cap sync",
    "cap:open:ios": "npx cap open ios"
  },
  "dependencies": {
    "@capacitor/core": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@capacitor/push-notifications": "^6.0.0",
    "@capacitor/geolocation": "^6.0.0",
    "@capacitor/local-notifications": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/splash-screen": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0"
  }
}
