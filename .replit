modules = ["nodejs-20", "web", "postgresql-16"]

# Force the dev server to bind to all interfaces so Replit's webview/proxy can reach it
run = "npm run dev -- --host 0.0.0.0"

hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["unzip", "jq"]

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]

[env]
PORT = "5000"

[agent]
integrations = [
  "javascript_log_in_with_replit:1.0.0",
  "javascript_database:1.0.0",
  "javascript_openai:1.0.0",
  "javascript_object_storage:1.0.0",
  "javascript_openai_ai_integrations:2.0.0",
]

[userenv]
[userenv.shared]
MAIL_FROM_NAME = "Nearby Traveler"
MAIL_FROM_EMAIL = "aaron@thenearbytraveler.com"
APP_URL = "https://0b28d8d5-a9b1-48e3-808f-418af8e21b7a-00-g5rim9byrn9z.worf.replit.dev"

